<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.akyuzsoft">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="OneToFifty"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@android:style/Theme.NoTitleBar"
        tools:replace="android:theme"
        android:fullBackupContent="false">
        <activity android:name="akyuz.soft.MainActivity"
            tools:ignore="ExtraText">

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="akyuz.soft.playActivity"
            tools:ignore="ExtraText">

            <meta-data
                android:name="com.google.android.gms.ads.akyzsoft.ca-app-pub-6028080211002001~2470181985"
                android:value="ca-app-pub-6028080211002001/1816216491"/>
        </activity>
        <activity android:name="akyuz.soft.rankActivity" />
        <activity android:name="com.google.android.gms.ads.AdActivity"
            android:configChanges="keyboard|keyboardHidden|orientation|screenLayout|uiMode|screenSize|smallestScreenSize"
            android:theme="@android:style/Theme.Translucent" />

    </application>

</manifest>